            <div class="footer-link">
                @foreach(GameModel game in availableGames)
                {
                    <a class="game-item-nav" href="/CreateParleyBet">
                        <h6 class="footer-game-item">@game.AwayTeam?.TeamName @@ @game.HomeTeam?.TeamName</h6>
                    </a>
