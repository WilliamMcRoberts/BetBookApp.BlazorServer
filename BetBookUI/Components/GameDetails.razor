
@inject AuthenticationStateProvider authProvider
@inject IGameData gameData
@inject ITeamData teamData

<div class="game-info-container">
        <h3 style="font-weight: 700;margin-top: .5em;" class="title">Game Details</h3>
    @if(CurrentGame is not null)
    {
        <div style="margin-bottom:1em;">
            <ul class="game-list">
                <li class="team-item">@CurrentGame.AwayTeam.TeamName at @CurrentGame.HomeTeam.TeamName || @CurrentGame.Favorite.TeamName - @CurrentGame.PointSpread points</li>
                <li class="game-time-date">@CurrentGame.DateOfGameOnly at @CurrentGame.TimeOfGameOnly pm</li>
            </ul>
            <br />
            <div class="records">
                <div class="fav-records">
                    <img style="height:100px;" src="/images/@CurrentGame.Favorite.ImagePath" alt="team logo">
                    <div class="stat">
                        <div class="rec-sec">
                            <div style="text-align:center;">
                                <label>Wins</label>
                            </div>
                            <div class="team">
                                @if(CurrentGame.Favorite.Wins is not null)
                                {
                                    @if(CurrentGame.Favorite.Wins.Split('|').SkipLast(1).ToArray().Length != 0)
                                    {
                                        @foreach(string team in CurrentGame.Favorite.Wins.Split('|').SkipLast(1).ToArray())
                                        {
                                            <h6 class="rec-item">@team</h6>
                                        }
                                    }
                                    else
                                    {
                                        <h6 class="rec-item">None</h6>   
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="stat">
                        <div class="rec-sec">
                            <div style="text-align:center;">
                                <label>Losses</label>
                            </div>
                            <div class="team">
                                @if(CurrentGame.Favorite.Losses is not null)
                                {
                                    @if(CurrentGame.Favorite.Losses.Split('|').SkipLast(1).ToArray().Length != 0)
                                    {
                                        @foreach(string team in CurrentGame.Favorite.Losses.Split('|').SkipLast(1).ToArray())
                                        {
                                            <h6 class="rec-item">@team</h6>
                                        }
                                    }
                                    else
                                    {
                                        <h6 class="rec-item">None</h6>   
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="stat">
                        <div class="rec-sec">
                            <div style="text-align:center;">
                                <label>Draws</label>
                            </div>
                            <div class="team">
                                @if(CurrentGame.Favorite.Draws is not null)
                                {
                                    @if(CurrentGame.Favorite.Draws.Split('|').SkipLast(1).ToArray().Length != 0)
                                    {
                                        @foreach(string team in CurrentGame.Favorite.Draws.Split('|').SkipLast(1).ToArray())
                                        {
                                            <h6 class="rec-item">@team</h6>
                                        }
                                    }
                                    else
                                    {
                                        <h6 class="rec-item">None</h6>   
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="und-records">
                    <img style="height:100px;" src="/images/@CurrentGame.Underdog.ImagePath" alt="team logo">
                    <div class="stat">
                          <div class="rec-sec">
                            <div style="text-align:center;">
                                <label>Wins</label>
                            </div>
                            <div class="team">
                                @if(CurrentGame.Underdog.Wins is not null)
                                {
                                    @if(CurrentGame.Underdog.Wins.Split('|').SkipLast(1).ToArray().Length != 0)
                                    {
                                        @foreach(string team in CurrentGame.Underdog.Wins.Split('|').SkipLast(1).ToArray())
                                        {
                                            <h6 class="rec-item">@team</h6>
                                        }
                                    }
                                    else
                                    {
                                        <h6 class="rec-item">None</h6>   
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="stat">
                        <div class="rec-sec">
                            <div style="text-align:center;">
                                <label>Losses</label>
                            </div>
                            <div class="team">
                                @if(CurrentGame.Underdog.Losses is not null)
                                {
                                    @if(CurrentGame.Underdog.Losses.Split('|').SkipLast(1).ToArray().Length != 0)
                                    {
                                        @foreach(string team in CurrentGame.Underdog.Losses.Split('|').SkipLast(1).ToArray())
                                        {
                                            <h6 class="rec-item">@team</h6>
                                        }
                                    }
                                    else
                                    {
                                        <h6 class="rec-item">None</h6>   
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="stat">
                        <div class="rec-sec">
                            <div style="text-align:center;">
                                <label>Draws</label>
                            </div>
                            <div class="team">
                                @if(CurrentGame.Underdog.Draws is not null)
                                {
                                    @if(CurrentGame.Underdog.Draws.Split('|').SkipLast(1).ToArray().Length != 0)
                                    {
                                        @foreach(string team in CurrentGame.Underdog.Draws.Split('|').SkipLast(1).ToArray())
                                        {
                                            <h6 class="rec-item">@team</h6>
                                        }
                                    }
                                    else
                                    {
                                        <h6 class="rec-item">None</h6>   
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    
    </div>

@code {

    // Display info for current game being viewed
    [Parameter]
    public GameModel CurrentGame { get; set; } = new();
}
