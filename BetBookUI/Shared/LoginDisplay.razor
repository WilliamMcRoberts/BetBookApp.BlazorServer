@inject AuthenticationStateProvider authProvider
@inject IUserData userData

<AuthorizeView Policy="Admin">
    <Authorized>
        <a href="/AdminGamesUpdate">
            <button style="margin-top:1.75em;" class="site-btn btn site-btn-light btn-sm text-uppercase">Admin Games Update</button>
        </a>
        <a href="/AdminScoresInput">
            <button style="margin-top:1.75em;" class="site-btn btn site-btn-light btn-sm text-uppercase">Admin Scores Input</button>
        </a>
    </Authorized>
</AuthorizeView>
<AuthorizeView>
    <Authorized>
        <a href="/CreateParleyBet">
            <button style="margin-top:1.75em;" class="site-btn btn site-btn-light btn-sm text-uppercase">Create Parley Bet</button>
        </a>
        <a href="/Profile">
